/**index.wxss**/
.banner swiper {
  background-color: rebeccapurple;
}
.swiper_box {
  width: 100%;
  height: 562.5rpx;
}
.scroll_image {
  width: 100%;
  height: 100%;
}


.item_select {
  height: 88rpx;
  /* display: flex; */
  /* flex-direction: row; */
}

.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}
.type_item {
  font-size: 30rpx;
  width: 160rpx;

  /* box-sizing: content-box; */
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  /* overflow: hidden; */
}
.type_item_select {
  border-bottom: 4rpx solid #e64340;
}

.type_item_no_select {
  border-bottom: 4rpx solid #fff;
}

.coupons_scroll {
  white-space: nowrap;
  width: 100%;
  height:180rpx;
}
.coupon_item {
  height:160rpx;
  width: 300rpx;
  background-color: #F1A83B;
  margin-left:10rpx;
  margin-top:10rpx;
  /* display: flex; */
  padding-left: 10rpx;
  flex-direction: column;
  font-size: 28rpx;
  color: white;
  display: inline-block;

}

.goods_list {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
  background-color: #F2F2F2;
}
.goods_list_item {
  background-color: white;
  margin-bottom: 20rpx;
}
.goods_list image {
  width: 339rpx;
  height: 339rpx;
}
.goods_list_item view:nth-child(2) {
  font-size: 30rpx;
  color: black;
  padding-left: 20rpx;
}
.goods_list_item view:nth-child(3) {
  font-size: 30rpx;
  color: red;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}